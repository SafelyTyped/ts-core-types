{
  "name": "@safelytyped/core-types",
  "version": "0.4.0",
  "description": "Core safe types for Typescript",
  "repository": "github:SafelyTyped/ts-core-types",
  "main": "lib/v1/index.js",
  "types": "lib/v1/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run lint && tsc",
    "lint": "npx eslint .",
    "prepublishOnly": "npm run test",
    "prepack": "npm run build && rimraf lib/**/_*",
    "test": "npm run build && mocha -r ts-node/register \"src/**/*.spec.ts\"",
    "cover": "rimraf coverage && rimraf .nyc_output && nyc --cache=false npm run test",
    "clean": "rimraf coverage lib",
    "docs": "typedoc",
    "api-extractor": "npm run clean && tsc && api-extractor run --local --verbose"
  },
  "contributors": [
    "Stuart Herbert <stuherbert@ganbarodigital.com> (https://ganbarodigital.com)"
  ],
  "keywords": [
    "architypes",
    "booleanish",
    "contracts",
    "data guarantees",
    "data guards",
    "defensive programming",
    "entities",
    "error reporting",
    "hashmap",
    "nominals",
    "operators",
    "protocols",
    "refined types",
    "safe types",
    "type guards",
    "type refinement",
    "validation",
    "value objects"
  ],
  "files": [
    "lib/**/*",
    "CHANGELOG.md",
    "LICENSE.md"
  ],
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@microsoft/api-documenter": "^7.13.28",
    "@microsoft/api-extractor": "^7.17.1",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^7.0.1",
    "@types/node": "^18.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "chai": "^4.3.0",
    "chai-bytes": "^0.1.2",
    "chai-string": "^1.5.0",
    "eslint": "^8.52.0",
    "mocha": "^10.0",
    "nyc": "^15.0.0",
    "rimraf": "^3.0.0",
    "ts-node": "^9.0",
    "tslint": "^6.1.3",
    "typedoc": "^0.25.2",
    "typescript": "^5.0"
  }
}
